{
    "$schema": "http://json.schemastore.org/prettierrc",
    "printWidth": 1000,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "bracketSpacing": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": [
                ".*rc",
                "*.json"
            ],
            "options": {
                "parser": "json"
            }
        },
        {
            "files": [
                "*.{jsonc,cjson}",
                ".vscode/*",
                "tsconfig.json"
            ],
            "options": {
                "parser": "json5",
                "quoteProps": "preserve",
                "singleQuote": false,
                "trailingComma": "all"
            }
        },
    ]
}